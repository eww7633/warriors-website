generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  fullName         String
  email            String    @unique
  passwordHash     String
  requestedPosition String?
  phone            String?
  role             String    @default("public")
  status           String    @default("pending")
  activityStatus   String    @default("active")
  rosterId         String?
  jerseyNumber     Int?
  equipmentSizes   Json
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  sessions         Session[]
  checkIns         CheckIn[]
  competitionMemberships CompetitionTeamMember[]
  @@index([activityStatus])
  @@index([rosterId])
  @@index([jerseyNumber])
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model CheckIn {
  id               String   @id @default(cuid())
  userId           String
  eventId          String
  checkedInAt      DateTime?
  arrivedAt        DateTime?
  attendanceStatus String
  note             String?
  createdAt        DateTime @default(now())

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventId])
}

model Event {
  id              String   @id @default(cuid())
  title           String
  startsAt        DateTime
  publicDetails   String
  privateDetails  String?
  visibility      String   @default("public")
  published       Boolean  @default(true)
  locationPublic  String?
  locationPrivate String?
  seasonId        String?
  venueId         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  season          Season?  @relation(fields: [seasonId], references: [id], onDelete: SetNull)
  venue           Venue?   @relation(fields: [venueId], references: [id], onDelete: SetNull)

  @@index([published])
  @@index([startsAt])
  @@index([visibility])
  @@index([seasonId])
  @@index([venueId])
}

model Competition {
  id        String   @id @default(cuid())
  title     String
  type      String
  startsAt  DateTime?
  status    String   @default("planned")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teams     CompetitionTeam[]
  games     CompetitionGame[]

  @@index([type])
  @@index([startsAt])
}

model Season {
  id          String   @id @default(cuid())
  label       String
  startsAt    DateTime?
  endsAt      DateTime?
  isActive    Boolean  @default(false)
  isArchived  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teams       Team[]
  events      Event[]

  @@index([isActive])
  @@index([startsAt])
}

model Team {
  id          String   @id @default(cuid())
  name        String
  code        String?
  colorTag    String?
  level       String?
  seasonId    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  season      Season?  @relation(fields: [seasonId], references: [id], onDelete: SetNull)

  @@index([seasonId])
  @@index([isActive])
  @@unique([name, seasonId])
}

model Venue {
  id          String   @id @default(cuid())
  name        String
  address1    String?
  city        String?
  state       String?
  postalCode  String?
  mapUrl      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  events      Event[]

  @@index([name])
}

model Position {
  id          String   @id @default(cuid())
  code        String
  label       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([code])
}

model StaffProfile {
  id          String   @id @default(cuid())
  fullName    String
  email       String?
  phone       String?
  jobTitle    String
  bio         String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([jobTitle])
  @@index([isActive])
}

model Sponsor {
  id          String   @id @default(cuid())
  name        String
  websiteUrl  String?
  logoUrl     String?
  notes       String?
  impressions Int      @default(0)
  clicks      Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
}

model CompetitionTeam {
  id            String   @id @default(cuid())
  competitionId String
  name          String
  colorTag      String?
  rosterMode    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  competition   Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  members       CompetitionTeamMember[]
  games         CompetitionGame[]

  @@index([competitionId])
}

model CompetitionTeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  createdAt DateTime @default(now())

  team      CompetitionTeam @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
}

model CompetitionGame {
  id            String   @id @default(cuid())
  competitionId String
  teamId        String
  opponent      String
  startsAt      DateTime?
  location      String?
  status        String   @default("scheduled")
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  competition   Competition     @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  team          CompetitionTeam @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([competitionId])
  @@index([teamId])
  @@index([startsAt])
}
