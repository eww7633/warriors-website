generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  fullName         String
  email            String    @unique
  passwordHash     String
  requestedPosition String?
  phone            String?
  role             String    @default("public")
  status           String    @default("pending")
  rosterId         String?
  jerseyNumber     Int?
  equipmentSizes   Json
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  sessions         Session[]
  checkIns         CheckIn[]
  competitionMemberships CompetitionTeamMember[]

  @@unique([rosterId, jerseyNumber])
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model CheckIn {
  id               String   @id @default(cuid())
  userId           String
  eventId          String
  checkedInAt      DateTime?
  arrivedAt        DateTime?
  attendanceStatus String
  note             String?
  createdAt        DateTime @default(now())

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventId])
}

model Event {
  id              String   @id @default(cuid())
  title           String
  startsAt        DateTime
  publicDetails   String
  privateDetails  String?
  visibility      String   @default("public")
  published       Boolean  @default(true)
  locationPublic  String?
  locationPrivate String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([published])
  @@index([startsAt])
  @@index([visibility])
}

model Competition {
  id        String   @id @default(cuid())
  title     String
  type      String
  startsAt  DateTime?
  status    String   @default("planned")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teams     CompetitionTeam[]

  @@index([type])
  @@index([startsAt])
}

model CompetitionTeam {
  id            String   @id @default(cuid())
  competitionId String
  name          String
  colorTag      String?
  rosterMode    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  competition   Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  members       CompetitionTeamMember[]

  @@index([competitionId])
}

model CompetitionTeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  createdAt DateTime @default(now())

  team      CompetitionTeam @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
}
