{
  "expo": {
    "name": "Warriors HQ",
    "slug": "warriors-hq-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "warriorshq",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Warriors HQ uses camera access to scan QR check-in codes.",
        "NSCalendarsUsageDescription": "Warriors HQ uses calendar access to add your team events.",
        "NSUserNotificationsUsageDescription": "Warriors HQ sends reminders for RSVP updates, announcements, and check-ins."
      }
    },
    "android": {
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-camera",
      "expo-notifications"
    ],
    "extra": {
      "apiBaseUrl": "",
      "icalFeedUrl": "",
      "googleCalendarSubscribeUrl": "",
      "sentryDsn": "",
      "appSupportEmail": "ops@pghwarriorhockey.us",
      "privacyUrl": "",
      "featureFlagsUrl": ""
    }
  }
}
